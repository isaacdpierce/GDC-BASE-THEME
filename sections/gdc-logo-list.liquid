{{ 'gdc-logo-list.css' | asset_url | stylesheet_tag }}

<section class="gdc-logo-list__wrapper 
                gdc-logo-list--{{ section.id }} 
                color-{{ section.settings.color_scheme }}
                {% if section.settings.hide_mobile %}
                hide-600
                {% endif %}
                ">
  {%- if section.settings.title != blank -%}
    <div class="section-header">
      <h2 class="section-header__title">{{ section.settings.title | escape }}</h2>
    </div>
  {%- endif -%}

  {%- if section.blocks.size > 0 -%}
    <div class="gdc-logo-list">
      {%- for block in section.blocks -%}
        <div class="gdc-logo-list__item" {{ block.shopify_attributes }}> 

          {%- if block.settings.image != blank -%}
            {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <div class="gdc-logo-list__image">
              <img srcset="{%- if block.settings.image.width >= 165 -%}{{ block.settings.image | img_url: '165x' }} 165w,{%- endif -%} 
              {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | img_url: '360x' }} 360w,{%- endif -%}
              {%- if block.settings.image.width >= 535 -%}{{ block.settings.image | img_url: '535x' }} 535w,{%- endif -%}
              {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | img_url: '720x' }} 720w,{%- endif -%}
              {%- if block.settings.image.width >= 940 -%}{{ block.settings.image | img_url: '940x' }} 940w,{%- endif -%}
              {%- if block.settings.image.width >= 1070 -%}{{ block.settings.image | img_url: '1070x' }} 1070w{%- endif -%}"
              src="{{ block.settings.image | img_url: '533x' }}"
              sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
            </div>
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }} 
          {%- endif -%}
          {%- if block.settings.logo_title != blank -%}
            <h6 class="h6">{{ block.settings.logo_title }}</h6>
          {%- endif -%}

          {%- if block.settings.link_text != blank -%}
            <a class="link link--text" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
</section>

{% schema %}
  {
    "name": "Custom Logo list",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "hide_mobile",
        "label": "Hide on mobile",
        "default": false
      },
      {
        "type": "select",
        "id": "color_scheme",
        "options": [
          {
            "value": "accent-1",
            "label": "t:sections.footer.settings.color_scheme.options__1.label"
          },
          {
            "value": "accent-2",
            "label": "t:sections.footer.settings.color_scheme.options__2.label"
          },
          {
            "value": "background-1",
            "label": "t:sections.footer.settings.color_scheme.options__3.label"
          },
          {
            "value": "background-2",
            "label": "t:sections.footer.settings.color_scheme.options__4.label"
          },
          {
            "value": "inverse",
            "label": "t:sections.footer.settings.color_scheme.options__5.label"
          }
        ],
        "default": "background-1",
        "label": "t:sections.footer.settings.color_scheme.label"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "logo_title",
            "label": "Logo Title"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Logo list",
        "category": "GDC Custom Components",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
