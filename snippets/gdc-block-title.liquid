{%- assign header_font = block.settings.title_font -%}

<div class="gdc-block__title block--{{ block.id}} {{ hide_mobile }} {{ hide_tablets }}">
  <h2>{{ block.settings.title }}</h2>
</div>

<style>
  {{ header_font | font_face }}

  .gdc-block__title.block--{{ block.id }} {
    margin-top: {{ block.settings.t_margin }}px;
    margin-bottom: {{ block.settings.b_margin }}px;
    padding-top: {{ block.settings.t_padding }}px;
    padding-bottom: {{ block.settings.b_padding }}px;
    background-color: {{ block.settings.bg_color }};
  }

  .gdc-block__title.block--{{ block.id }} h2 {
    {% if block.settings.use_custom_font %}
    font-family: {{ header_font.family }};
    {% endif %}
    color: {{ block.settings.font_color }};
    text-align: {{ block.settings.title_align }};  
    font-size: {{ block.settings.font_size }}px; 
    {% if block.settings.text_shadow == 'simple' %}
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.8) !important; 
    {% elsif block.settings.text_shadow == 'glow' %}
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.6) !important; 
    {% elsif block.settings.text_shadow == 'big_glow' %}
    text-shadow: 
    1px 0px 1px #ccc, 0px 1px 1px #eee, 
    2px 1px 1px #ccc, 1px 2px 1px #eee,
    3px 2px 1px #ccc, 2px 3px 1px #eee,
    4px 3px 1px #ccc, 3px 4px 1px #eee,
    5px 4px 1px #ccc, 4px 5px 1px #eee,
    6px 5px 1px #ccc, 5px 6px 1px #eee,
    7px 6px 1px #ccc !important; 
    {% elsif block.settings.text_shadow == 'fancy' %}
    text-shadow: 0 1px {{ block.settings.font_color }}70,
                -1px 0 {{ block.settings.bg_color }}70,
                -1px 2px {{ block.settings.font_color }}70,
                -2px 1px {{ block.settings.bg_color }}70,
                -2px 3px {{ block.settings.font_color }}70,
                -3px 2px {{ block.settings.bg_color }}70,
                -3px 4px {{ block.settings.font_color }}70,
                -4px 3px {{ block.settings.bg_color }}70,
                -4px 5px {{ block.settings.font_color }}70,
                -5px 4px {{ block.settings.bg_color }}70,
                -5px 6px {{ block.settings.font_color }}70,
                -6px 5px {{ block.settings.bg_color }}70,
                -6px 7px {{ block.settings.font_color }}70,
                -7px 6px {{ block.settings.bg_color }}70,
                -7px 8px {{ block.settings.font_color }}70,
                -8px 7px {{ block.settings.bg_color }}70 !important; 
    {% elsif block.settings.text_shadow == 'relief' %}
    text-shadow: -4px 3px 0 {{ block.settings.bg_color }}, -14px 7px 0 #222222 !important; 
    {% elsif block.settings.text_shadow == 'deep' %}
    text-shadow:  0 1px 0px #333,
                  1px 0 0px #777,
                  1px 2px 1px #333,
                  2px 1px 1px #777,
                  2px 3px 2px #333,
                  3px 2px 2px #777,
                  3px 4px 2px #333,
                  4px 3px 3px #777,
                  4px 5px 3px #333,
                  5px 4px 2px #777,
                  5px 6px 2px #333,
                  6px 5px 2px #777,
                  6px 7px 1px #333,
                  7px 6px 1px #777,
                  7px 8px 0px #333,
                  8px 7px 0px #777;
    {% endif %}
  }
  
</style>
